<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App10"
             x:Class="App10.MainPage">

    <StackLayout x:Name="stack">
        <!-- Place new controls here -->
        <Label x:Name="lblOne" Text="Pierwsza labelka" TextColor="Tomato" />
        <Label Text="Druga labelka" TextColor="{StaticResource PrimaryColor}" />
        <Entry x:Name="entryLogin" Placeholder="Login" TextChanged="EntryLogin_TextChanged" />
        <Entry x:Name="entryPassword" Placeholder="Password" TextChanged="EntryLogin_TextChanged" IsPassword="True" />
        <Label x:Name="lblValidation" Text="Błedne dane" FontSize="Micro" TextColor="Red" IsVisible="False" />
        <Button x:Name="btnLogin" Text="Zaloguj" Clicked="Button_Clicked" />
        <Entry x:Name="entryUrl" Placeholder="Wpisz adres www" Completed="EntryUrl_Completed" TextChanged="EntryUrl_TextChanged" />
    </StackLayout>

</ContentPage>
